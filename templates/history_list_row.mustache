{{!
    @template local_wunderbyte_table/table
    Template which defines a mooduell view page.
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    * statistics - array: An array with values.
    * opengames - array: empty array, will be filled with JS.
    * finishedgames - array: empty array, will be filled with JS.
    * highscores - array: empty array, will be filled with JS.

    Example context (json):
    {
        "rowid": "row42",
        "rowclasses": "table-success highlight-row",
        "datafields": [
            {
                "key": "courseid",
                "value": "42"
            },
            {
                "key": "userid",
                "value": "1234"
            }
        ],
        "cardbody": [
            {
                "columnclass": "text-center",
                "key": "fullname",
                "value": "Alice Johnson",
                "localized": "Full Name",
                "columniclassbefore": "fa fa-user"
            },
            {
                "key": "status",
                "value": "",
                "localized": "Status",
                "columniclassbefore": "fa fa-question-circle"
            }
        ],
        "invisiblerow": {
            "columnclass": "text-muted",
            "key": "description",
            "value": "<p>This user has completed the assignment and submitted all tasks.</p>",
            "localized": "Description",
            "columniclassbefore": "fa fa-info-circle",
            "rowid": "row42"
        }
    }
}}

<tr id="{{rowid}}" class="{{rowclasses}}" {{#datafields}} data-{{key}}="{{value}}" {{/datafields}}>
  {{#cardbody}}
    {{#columnclass}}
      <td class="{{.}} {{key}} {{^value}}novalue{{/value}}"
          data-label="{{key}}"
          data-localized="{{localized}}"
          data-toggle="collapse"
          data-target="#collapseRow{{rowid}}">
        {{#columniclassbefore}}
          <i class="{{.}}" aria-hidden="true"></i>
        {{/columniclassbefore}}
        {{{value}}}
      </td>
    {{/columnclass}}

    {{^columnclass}}
      <td>
        {{#columniclassbefore}}
          <i class="{{.}}" aria-hidden="true"></i>
        {{/columniclassbefore}}
        {{{value}}}
      </td>
    {{/columnclass}}
  {{/cardbody}}
</tr>

{{#invisiblerow}}
<tr>
  <td colspan="3" class="{{columnclass}} {{key}} {{^value}}novalue{{/value}} border-0"
      data-label="{{key}}"
      data-localized="{{localized}}">
    <div class="collapse my-2 mx-4 bl-border-left" id="collapseRow{{rowid}}">
      {{#columniclassbefore}}
        <i class="{{.}}" aria-hidden="true"></i>
      {{/columniclassbefore}}
      {{{value}}}
    </div>
  </td>
</tr>
{{/invisiblerow}}