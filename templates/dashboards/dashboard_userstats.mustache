<div class="row mb-4">
    <!-- Box: Weiterbildungsprofil -->
    <div class="col-md-6 mb-3">
        <div class="card h-100 shadow-sm">
            <div class="card-body d-flex align-items-center">
                <div class="me-3 display-4 text-primary">
                    <i class="fa fa-graduation-cap" aria-hidden="true"></i>
                </div>
                <div>
                    <h6 class="text-muted mb-1">{{#str}} traininghistory, local_taskflow {{/str}}</h6>
                    <p class="mb-1">
                        {{#userid}}
                            <a href='/mod/booking/mybookings.php?userid={{userid}}&completed=1'>
                        {{/userid}}
                        {{^userid}}
                            <a href='/mod/booking/mybookings.php&completed=1'>
                        {{/userid}}
                            <strong>{{profile.entries}}</strong> {{#str}} coursesfinished, local_taskflow {{/str}}
                        </a>
                    </p>
                    <p class="mb-0">
                        {{#userid}}
                            <a href='/local/taskflow/mycertificates.php?userid={{userid}}'>
                        {{/userid}}
                        {{^userid}}
                            <a href='/local/taskflow/mycertificates.php'>
                        {{/userid}}
                            <strong>{{profile.certificates}}</strong> {{#str}} certificates, local_taskflow {{/str}}
                        </a>
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Box: LernaktivitÃ¤t mit Kreisdiagramm -->
    <div class="col-md-6 mb-3">
        <div class="card h-100 shadow-sm rounded-2xl">
            <div class="card-body">
                <h5 class="card-title mb-3">{{#str}} courses, local_taskflow {{/str}}</h5>
                <div class="d-flex align-items-center">
                    <div class="me-3">
                        <!-- Kreisdiagramm: kommt per JS oder extern rein -->
                        <canvas id="lernaktivitaet-chart-{{uniqid}}" width="100" height="100"></canvas>
                    </div>
                    {{{profile.chart}}}
                </div>
            </div>
        </div>
    </div>
</div>