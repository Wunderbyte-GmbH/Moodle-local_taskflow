{{!
    @template local_adele/initview
    Classes required for JS:
    * none
    Data attributes required for JS:
    * none
    Context variables required for this template:
    Example context (json):
    {
        "headline": "Upcoming Assignments",
        "description": "Below is a list of your assignments due in the next two weeks.",
        "table": "<table class=\"table table-striped\"><thead><tr><th>Course</th><th>Assignment</th><th>Due Date</th></tr></thead><tbody><tr><td>Math 101</td><td>Homework 3</td><td>10 June 2025</td></tr><tr><td>Biology 202</td><td>Lab Report</td><td>12 June 2025</td></tr></tbody></table>"
    }
}}

<div>
<h2>{{headline}}</h2>
    <p>{{description}}</p>
    <div class="assignmentstable">{{{table}}}</div>
    {{#information}}
        <div class="alert alert-info mt-4" role="alert">
            {{{information}}}
        </div>
    {{/information}}
</div>