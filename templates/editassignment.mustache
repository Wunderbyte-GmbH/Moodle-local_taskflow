<!-- Ensure the following markup resides within the content area of your Moodle page -->

<div class="container my-4">
  <h2 class="mb-4">{{#str}} detailview, local_taskflow {{/str}}</h2>
  <button type="button" data-returnurl="{{returnurl}}" class="btn btn-secondary" data-region="editassignment-smartback" data-action="smartback">
    {{#str}} back, core {{/str}}
  </button>

  <!-- Assignment data -->
  <div class="card mb-4">
    <div class="card-header bg-primary text-white">{{#str}} assignmentdata, local_taskflow {{/str}}</div>
    <div class="card-body">
      <dl class="row">
        {{#assignmentdata}}
        <dt class="col-sm-4">{{label}}</dt>
        <dd class="col-sm-8">{{value}}</dd>
        {{/assignmentdata}}
      </dl>
        <div data-id="assignmentform" data-assignmentid="{{id}}">
        {{{editassignmentform}}}
        </div>
    </div>
  </div>

  <!-- Historie -->
  <div class="card mb-4">
    <div class="card-header bg-info text-white">Historie</div>
    <div class="card-body p-0">
      {{{historylist}}}
    </div>
  </div>


{{#js}}
require(['local_taskflow/editassignmentform'], function(init) {
    init.init('[data-id="assignmentform"]', 'local_taskflow\\form\\editassignment');
});
{{/js}}